{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types",
            "./node_modules/**/*"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "index.js",
        "jest/jest.config.jsig.js"
    ]
}
